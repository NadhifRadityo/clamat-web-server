generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    username  String @unique
    password  String
    modifiers Json
}

model Miner {
    id        String          @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    birthdate DateTime
    gender    Boolean
    sessions  CLamatSession[]
    modifiers Json
}

model CLamatNode {
    id        String          @id @default(auto()) @map("_id") @db.ObjectId
    sessions  CLamatSession[]
    modifiers Json
}

model CLamatBroker {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    modifiers Json
}

model CLamatSession {
    id        String     @id @default(auto()) @map("_id") @db.ObjectId
    active    Boolean
    nodeId    String     @db.ObjectId
    node      CLamatNode @relation(fields: [nodeId], references: [id])
    minerId   String     @db.ObjectId
    miner     Miner      @relation(fields: [minerId], references: [id])
    modifiers Json

    @@unique(fields: [active, nodeId], name: "active_nodeId")
}
