generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    username  String @unique
    password  String
    modifiers Json
}

model CLamatMiner {
    id        String          @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    birthdate DateTime
    gender    Boolean
    sessions  CLamatSession[]
    modifiers Json
}

model CLamatModule {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    version   String
    modifiers Json

    @@unique(fields: [name, version], name: "name_version")
}

model CLamatBroker {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    modifiers Json
}

model CLamatNode {
    id        String          @id @default(auto()) @map("_id") @db.ObjectId
    sessions  CLamatSession[]
    modifiers Json
}

model CLamatSession {
    id        String      @id @default(auto()) @map("_id") @db.ObjectId
    runId     Int
    active    Boolean
    nodeId    String      @db.ObjectId
    node      CLamatNode  @relation(fields: [nodeId], references: [id])
    minerId   String      @db.ObjectId
    miner     CLamatMiner @relation(fields: [minerId], references: [id])
    modifiers Json

    @@unique(fields: [runId, nodeId], name: "runId_nodeId")
}
